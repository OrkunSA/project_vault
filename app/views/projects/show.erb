<div class="jumbotron">
<h1 class="display-3"><%= @project.title %></h1>
<p class="lead"><strong>Description: </strong> <%=@project.description%></p>
<hr class="my-4">
<p>More Details</p>
<ul>
  <li><%=@project.platform%></li>
  <li><%=@project.programming_language%></li>
</ul>

 <a class="btn btn-info btn-sm" href="/projects/<%= @project.id %>/edit" role="button">Edit Project</a>
 <br>
 <% if @project.user_id == @user.id %>
<form method="POST" action="/projects/<%= @project.id %>/delete">
<input id="hidden" type="hidden" name="_method" value="delete">
<button type="submit" class="btn btn-danger btn-sm">Delete Project</button>
</form>
<% end %>
</div>
<% if @project.user_id == @user.id %>
  <div class="text-right"><a class="btn btn-success" style="margin: 20px" href="/projects" role="button">< Back to My Project Vault</a></div>
<% end %>
